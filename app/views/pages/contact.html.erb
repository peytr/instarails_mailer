<h3>Send Me a Message</h3>
<br>
<div class="form">
    <%= form_for :contact do |f| %>
        <p>
        <%= f.label :name %>
        <br>
        <%= f.text_field :name, class: "form-control"%>
        </p>
        <p>
        <%= f.label :message %>
        <br>
        <%= f.text_area :message, rows: '8', class: "form-control" %>
        </p>
        <p>
        <%= f.submit 'Submit', class: "btn btn-primary"%>
        </p>
    <% end %>
</div>

<hr>